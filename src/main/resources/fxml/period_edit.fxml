<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane  xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.spb.konenkov.controller.PeriodEditController">
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Button mnemonicParsing="false" onAction="#handleSave" text="Сохранить" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="Отменить" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="periodName" />
            </children>
            <padding>
                <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER" fx:id="scrollPane"/>
    </center>
</BorderPane>
